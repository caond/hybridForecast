#' @import dplyr
#' @import lubridate
#' @import changepoint
#' @importFrom stats predict lm sd
#' @importFrom utils head tail
#'
#' @examples
#' # Simulate a time series
#' data <- simulate_time_series(freq = "week", length_out = 156, seed = 42)
#'
#' # Fit hybrid model
#' hybrid_model <- hybrid(data)
#'
#' # Plot CV results
#' plot(hybrid_model)
#'
#' # Predict future
#' future <- data.frame(ds=seq(max(data$ds)+7, by='week', length.out=30))
#' forecast_hybrid_output <- predict(hybrid_model, future)
#' plot(forecast_hybrid_output)
